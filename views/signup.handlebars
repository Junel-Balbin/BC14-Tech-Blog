<div style="float: right;" class="columns">
  <div class="column"></div>

<form id="createForm" class="card-body" style="font-size:x-large;"></form>
  <div class="column is-4">
    <div class="field">
      <label for="create_username">Username</label>
      <div class="control">
        <input id="create_username" class="input" type="text">
      </div>
    </div>

    <div class="field">
      <label for="create_email">Email</label>
      <div class="control has-icons-left has-icons-right">
        <input id="create_email" class="input is-danger" type="email" value="">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <label for="create_password">Password</label>
      <div class="control has-icons-left">
        <input id="create_password" class="input" type="password">
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="btn">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">
          <a class="button is-link is-light" href="/user/login">Cancel</a>
        </button>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>


