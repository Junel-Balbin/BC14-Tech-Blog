<div class="card">
  <h3 class="card-header">Create New Post</h3>

  <form id="createPost" class="card-body">
    <div style="margin-bottom: 10px;">
      <label style="font-size: large;" for="create_title">Title</label>
      <input type="text" id="create_title">
    </div>
    <div style="margin-bottom: 10px;">
      <label style="font-size: large;" for="create_content">Content</label>
      <textarea style="width: 100%; font-size: large; padding: 5px;" rows="5" id="create_content"></textarea>
    </div>
    <button style="font-size: medium" class="btn" type="submit">Submit Post</button>
    <button style="font-size: medium" type="button"><a href="/dashboard/">Cancel</a></button>
  </form>
</div>

<script src="/js/createpost.js"></script>


